          form.classList.add('submitted');
          setTimeout(() => form.classList.remove('submitted'), 600);
          alert('Thank you for reaching out! I will get back to you soon.');
        });
      });
      
      // ========================================
      // PROJECT CARDS - Flip Animation
      // ========================================
      const cards = Array.from(document.querySelectorAll('.project-card'));

      // Card flip on click or Enter/Space
      cards.forEach(card => {
        card.addEventListener('click', function (e) {
          // Don't flip if clicking on a button
          if (e.target.tagName === 'BUTTON' || e.target.classList.contains('view-details-btn')) return;
          
          if (!card.classList.contains('flipped')) {
            cards.forEach(c => c.classList.remove('flipped'));
            card.classList.add('flipped');
          } else {
            card.classList.remove('flipped');
          }
        });
        
        card.addEventListener('keydown', function (e) {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            if (!card.classList.contains('flipped')) {
              cards.forEach(c => c.classList.remove('flipped'));
              card.classList.add('flipped');
            } else {
              card.classList.remove('flipped');
            }
          }
        });
      });
      
      // ========================================
      // PROJECT MODAL - View Details Popup
      // ========================================
      const projectModal = document.getElementById('projectModal');
      const modalClose = document.getElementById('modalClose');
      const viewDetailsButtons = document.querySelectorAll('.view-details-btn');
      
      // Project data
      const projectData = {
        1: {
          title: 'Modern Web App',
          image: 'project1.jpg',
          description: 'A cutting-edge web application built with React and Node.js, featuring real-time communication, secure authentication, and a fully responsive user interface. This project demonstrates modern web development practices and scalable architecture.',
          tags: ['React', 'Node.js', 'Socket.io', 'MongoDB', 'JWT'],
          features: [
            'Real-time chat functionality with WebSocket',
            'Secure user authentication and authorization',
            'Responsive design for all devices',
            'RESTful API with Node.js and Express',
            'MongoDB database integration',
            'Modern UI with Material Design principles'
          ],
          liveLink: '#',
          githubLink: '#'
        },
        2: {
          title: 'Inventory Management System',
          image: 'project2.jpg',
          description: 'A comprehensive inventory management solution built with PHP and MySQL. Features include real-time stock tracking, advanced analytics dashboard, automated reporting, and data export capabilities for business intelligence.',
          tags: ['PHP', 'MySQL', 'Bootstrap', 'Chart.js', 'jQuery'],
          features: [
            'Real-time inventory tracking and alerts',
            'Advanced analytics and reporting dashboard',
            'Automated email notifications for low stock',
            'Multi-user role-based access control',
            'Export data to Excel and PDF formats',
            'Barcode scanning integration'
          ],
          liveLink: '#',
          githubLink: '#'
        },
        3: {
          title: 'Portfolio Website',
          image: 'project3.jpg',
          description: 'A mobile-first portfolio website showcasing smooth animations, interactive elements, and a functional contact form. Built using pure HTML, CSS, and JavaScript with focus on performance and user experience.',
          tags: ['HTML5', 'CSS3', 'JavaScript', 'Responsive', 'Animations'],
          features: [
            'Mobile-first responsive design',
            'Smooth scroll animations and transitions',
            'Interactive project gallery with lightbox',
            'Contact form with validation',
            'Optimized for performance and SEO',
            'Cross-browser compatibility'
          ],
          liveLink: '#',
          githubLink: '#'
        },
        4: {
          title: 'E-Commerce Platform',
          image: 'project4.jpg',
          description: 'A full-featured e-commerce platform developed with Laravel framework. Includes secure payment gateway integration, advanced product search with filters, order tracking system, and comprehensive admin dashboard.',
          tags: ['Laravel', 'PHP', 'MySQL', 'Stripe', 'Vue.js'],
          features: [
            'Secure payment integration with Stripe',
            'Advanced product search and filtering',
